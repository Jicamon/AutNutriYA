        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.platillo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingredientes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.calorias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.porcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { PK = item.tipo, RK = item.platillo }) |
                @Html.ActionLink("Details", "Details", new { PK = item.tipo, RK = item.platillo }) |
                @Html.ActionLink("Delete", "Delete", new { PK = item.tipo, RK = item.platillo })
            </td>
        </tr>
}
    </tbody>
</table>
