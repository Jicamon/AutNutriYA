@model AutNutriYA.Paciente

@{
    ViewData["Title"] = "Crear Paciente";
}

<h2>Nuevo</h2>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreNut" class="control-label">Nutriolgo</label>
                <input asp-for="NombreNut" class="form-control" value="@User.Identity.Name" readonly/>
                <span asp-validation-for="NombreNut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" placeholder="Ejemplo@mail.com" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombrePac" class="control-label">Paciente</label>
                <input asp-for="NombrePac" class="form-control" />
                <span asp-validation-for="NombrePac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Edad" class="control-label"></label>
                <input asp-for="Edad" class="form-control" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Altura" class="control-label"></label>
                <input asp-for="Altura" class="form-control" />
                <span asp-validation-for="Altura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoNut" class="control-label">Correo de Nutriologo</label>
                <input asp-for="CorreoNut" class="form-control" value="@User.Identity.Name" readonly />
                <span asp-validation-for="CorreoNut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Contraseña</label>
                <input type="password" name="contrasena" placeholder="Contraseña del Paciente" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Mis Pacientes</a>
</div>

